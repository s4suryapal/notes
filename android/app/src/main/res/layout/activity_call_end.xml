<?xml version="1.0" encoding="utf-8"?>
<!-- NotesAI Call End Screen Layout -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical">

    <!-- Header Section -->
    <RelativeLayout
        android:id="@+id/headerContainer"
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:fitsSystemWindows="true"
        android:elevation="4dp"
        android:translationZ="4dp">

        <!-- Split Background Design -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/colorSurface" />

        </LinearLayout>

        <!-- Profile Avatar (Left) -->
        <RelativeLayout
            android:id="@+id/profileContainer"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp">

            <ImageView
                android:id="@+id/contactAvatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_profile_background"
                android:scaleType="centerInside"
                android:contentDescription="Caller avatar" />

        </RelativeLayout>

        <!-- Content Area (Center) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/profileContainer"
            android:orientation="vertical">

            <!-- Top Section (50% height) - Name + App Logo -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="10dp">

                <TextView
                    android:id="@+id/titleText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"
                    android:layout_toStartOf="@id/appLogo"
                    android:text="Call Ended"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textColor="@color/colorOnPrimary"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <ImageView
                    android:id="@+id/appLogo"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="5dp"
                    android:adjustViewBounds="true"
                    android:src="@mipmap/ic_launcher_round"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="4dp"
                    android:contentDescription="Open app home" />

            </RelativeLayout>

            <!-- Bottom Section (50% height) - Time/Duration + Call Icon -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginStart="10dp">

                <!-- Single Line Information Layout -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/callIcon"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Day and Time -->
                    <TextView
                        android:id="@+id/timeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sat, 1:06 PM"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:maxLines="1" />

                    <!-- Separator -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:text="•"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary" />

                    <!-- Call Status Indicator Dot -->
                    <View
                        android:id="@+id/callStatusDot"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_marginEnd="4dp"
                        android:background="@drawable/ic_circle_dot"
                        android:backgroundTint="@color/call_incoming" />

                    <!-- Call Type Text -->
                    <TextView
                        android:id="@+id/statusText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Incoming"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:maxLines="1" />

                    <!-- Separator -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:text="•"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary" />

                    <!-- Duration -->
                    <TextView
                        android:id="@+id/durationText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2:35"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:maxLines="1" />

                </LinearLayout>

                <!-- Call Icon (Right) -->
                <ImageView
                    android:id="@+id/callIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="5dp"
                    android:adjustViewBounds="true"
                    android:padding="5dp"
                    android:src="@drawable/ic_tab_message"
                    android:contentDescription="Call indicator" />

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

    <!-- Main Content Area with Tabs -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Tab Layout -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/colorPrimary"
            android:elevation="2dp"
            app:tabIndicatorColor="@color/colorOnPrimary"
            app:tabIndicatorHeight="3dp"
            app:tabMode="fixed"
            app:tabPaddingStart="0dp"
            app:tabPaddingEnd="0dp"
            app:tabIconTint="@color/tab_icon_tint"
            app:tabSelectedTextColor="@color/colorOnPrimary"
            app:tabTextColor="@color/colorOnPrimary"
            app:tabRippleColor="@color/ripple_primary"
            app:tabUnboundedRipple="false" />

        <!-- ViewPager for Tab Content -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/colorSurface" />

    </LinearLayout>

</LinearLayout>

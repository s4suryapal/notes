<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_marginVertical="4dp"
    android:background="@drawable/quick_response_bg"
    android:clickable="true"
    android:focusable="true"
    android:padding="12dp">

    <!-- Radio Button (Circle) -->
    <View
        android:id="@+id/radioButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/radio_button_selector" />

    <!-- Custom Message Input -->
    <!-- Following Google keyboard input guidelines:
         - inputType specifies text characteristics
         - imeOptions defines action button
         - imeActionLabel provides custom text
         - Supports both soft and hardware keyboard input
    -->
    <EditText
        android:id="@+id/etCustomMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="Write message..."
        android:textSize="14sp"
        android:textColor="#333333"
        android:textColorHint="#999999"
        android:background="@null"
        android:maxLines="3"
        android:minLines="1"
        android:inputType="textCapSentences|textMultiLine|textAutoCorrect"
        android:imeOptions="actionSend|flagNoExtractUi"
        android:imeActionLabel="Send"
        android:scrollHorizontally="false"
        android:importantForAutofill="no"
        android:padding="4dp"
        android:contentDescription="Type a custom message" />

    <!-- Send Arrow (Hidden by default, shown when selected and text entered) -->
    <ImageView
        android:id="@+id/ivSendArrow"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_send_24"
        app:tint="@color/colorPrimary"
        android:layout_marginStart="8dp"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="2dp" />

</LinearLayout>
